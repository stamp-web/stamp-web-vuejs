{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/models/*.ts", "vueform.config.ts"],
  "exclude": ["src/**/__tests__/*", "src/**/*.spec.ts", "src/vitest-setup.ts"],
  "compilerOptions": {
    "composite": true,
    "isolatedModules ": true,
    "verbatimModuleSyntax": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
