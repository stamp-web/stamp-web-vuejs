{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.ts", "vueform.config.ts", "src/locales/*.json"],
  "exclude": ["src/**/__tests__/*", "src/vitest-setup.ts", "src/@custom_types/*"],
  "compilerOptions": {
    "composite": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "*": ["./src/@custom_types/*"]
    },
  }
}
